# Environment variables for IMDB BERT Sentiment Analysis Project

# Hugging Face Hub token (for accessing private models)
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Weights & Biases API key (for experiment tracking)
WANDB_API_KEY=your_wandb_api_key_here

# GPU settings
CUDA_VISIBLE_DEVICES=0  # Specify which GPUs to use (e.g., 0,1 for multiple GPUs)

# Training settings
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:128  # Helps with CUDA out of memory errors

# Logging level
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Paths (optional, can override config file settings)
# DATA_DIR=data
# MODELS_DIR=models
# RESULTS_DIR=results

# Random seed for reproducibility
SEED=42
